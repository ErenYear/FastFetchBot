{# templates/social_media_message.html #}


{% if data.type == "short" %}
    {{ data.text }}\n#{{ data.category }}
{% else %}
    {# title #}
    {% if data.category in ['YouTube', 'Bilibili'] %}
        <a href="{{ data.url }}">
            <b>
                {{ data.title }}
            </b>
        </a>\n
    {% else %}
        <a href="{{ data.telegraph_url }}">
            <b>
                {{ data.title }}
            </b>
        </a>\n
    {% endif %}
    {# author #}
    via #{{ data.category }} -
    <a href="{{ data.author_url }}">
        {{ data.author }}
    </a>\n
    {# the message, which is from inoreader comment or telegram bot comment function (todo) #}
    {% if data.message %}
        {{ data.message }}\n
    {% endif %}
    {% if data.type == "long" %}
        <a href="{{ data.url }}">
            阅读原文
        </a>
    {% endif %}
{% endif %}



{# the original page function only supports long type item #}
