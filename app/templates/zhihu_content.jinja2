{# templates/zhihu_short_text.html #}

{% if data.zhihu_type == "answer" %}
    <h2>
        <a href="{{ data.url }}" target="_blank">{{ data.title }}</a>
    </h2>
    {% if data.question %}
        <p>
            {{ data.question }}
        </p>
        <p>
            发表于：{{ data.question_date }} 更新于：{{ data.question_updated }}
            <br>
            回答数：{{ data.question_answer_count }} 关注数：{{ data.question_follower_count }}
        </p>
        <hr>
    {% endif %}
    <p>
        作者：<a href="{{ data.author.url }}">{{ data.author.name }}</a>
    </p>
    <p>
        发表于：{{ data.date }} 更新于：{{ data.updated }}
        <br>
        点赞数：{{ self.upvote }}
        {% if data.comment_count %}
            评论数：{{ self.comment_count }}
        {% endif %}
    </p>
    <br>
    {{ data.raw_content }}
